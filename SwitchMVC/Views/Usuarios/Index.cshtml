@model IEnumerable<Switch.Domain.Entities.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h2>Usuario</h2>
<hr />

@if (TempData["MessagemOk"] != null)
{
    <div class="alert alert-success">
        @TempData["MessagemOk"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>     
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.LabelForModel("Imagem")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuarios)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>            
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @if (!String.IsNullOrEmpty(item.UrlFoto))
                    {
                        <img src="~/@item.UrlFoto" alt="@item.UrlFoto" style="width:100px;height:50px;max-width: 100%" class="img-thumbnail" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoUsuarios)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
